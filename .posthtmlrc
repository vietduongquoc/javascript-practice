{
    "root": "./src/",
    "input": "*.html",
    "output": "./dist/",
    "skip": [
        "skip.html",
        "file.html"
    ],
    "options": {
        "sync": true,
        "directives": [
            {
                "name": "?php",
                "start": "<",
                "end": ">"
            }
        ]
    },
    "plugins": {
        "posthtml-expressions": {
            "loopTags": [
                "each",
                "for"
            ]
        },
        "posthtml-include": {
            "root": "./src/",
            "encoding": "utf-8",
            "output": "./dist/"
        }
    }
}